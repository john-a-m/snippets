set shortmess=I "no more welcome text
colorscheme gruvbox
set anti enc=utf-8
set guifont=Source\ Code\ Variable:h13
syntax on
set tabstop=4
set backspace=indent,eol,start
set nu "display line numbers
au GUIEnter * simalt ~x "start vim in fullscreen mode
set guioptions-=m  "remove menu bar
set guioptions-=T  "remove toolbar
set guioptions-=r  "remove right-hand scroll bar
set colorcolumn=80 "draw a vertical line at the 80th column
